    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "name": "Run Homebridge",
            "runtimeExecutable": "/usr/bin/homebridge",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "args": [
                "-D",
                "-I",
                "--user-storage-path",
                "/var/lib/homebridge/"
            ]
        }
    ]
}